<div class="jumbotron">
  <h1 class="display-4"><%= @friend.first_name %> <%= @friend.last_name %></h1>
  <p class="lead">
    <%= @friend.email %> |
    <%= @friend.phone %> |
    <%= @friend.twitter %>
  </p>
  <hr class="my-4">
  <div>
    <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-primary" %> |
    <%= link_to "Back to friends", friends_path, class:"btn btn-secondary" %> 

    <%= button_to "Destroy this friend", @friend, method: :delete, class: "btn btn-dark mt-2 pl-5 pr-5 ml-3" %>
  </div>

</div>


